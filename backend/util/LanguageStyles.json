{
  "java": {
    "comments": {
      "maxLength": 20,
      "single": "//",
      "block": {
        "start": "/*",
        "end": "*/"
      },
      "exclude": ["@"]
    },
    "class": ["final public class", "public class", "public interface", "public abstract class", "private class"],
    "method": {
      "patterns": ["public", "void", "private", "protected", "default", "synchronized"],
      "avoid": ["final public class", "public class", "public interface", "public abstract class", "private class", ";"]
    },
    "keywords": ["return", "if", "else", "case", "default", "for", "while", "do", "break", "continue", "&&", "||", "?", ":", "catch", "finally", "throw", "throws"],
    "avoidKeys": ["&&", "||", "?", ":"]
  }
}